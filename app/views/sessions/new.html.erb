<h1>Welcome!</h1>

<h3>Log in:</h3>

<%= form_for :user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br></br>

  <%= f.label :password %>
  <%= f.password_field :password %><br></br>

  <%= f.submit 'Log In' %>
<% end %>

<h4>or <%= link_to "Sign Up", new_user_url %></h4>
