<h1>Log in</h1>
<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.submit 'Log in' %>
<% end %>

<div>
  Or <%= link_to 'Sign up', new_user_path %>
</div>
